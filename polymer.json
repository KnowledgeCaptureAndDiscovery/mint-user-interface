{
  "npm": true,
  "entrypoint": "index.html",
  "shell": "src/mint-app.js",
  "fragments": [
    "src/mint-home.js",
    "src/mint-govern.js",
    "src/mint-results.js",
    "src/mint-workflow.js",
    "src/mint-models.js",
    "src/mint-visualizations.js",
    "src/mint-data.js",
    "src/lazy-resources.js"
  ],
  "sources": [
   "src/**",
   "js/gui/**",
   "files/**",
   "images/**"
  ],
  "extraDependencies": [
    ".htaccess",
    "node_modules/@webcomponents/webcomponentsjs/**",
    "node_modules/mint-map/**",
    "node_modules/mint-chart/**",
    "js/lib/**",
    "manifest.json"
  ],
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "builds": [{
    "name": "default",
    "css": { "minify": true },
    "js": {
       "minify": { "exclude": ["js/lib/*"] }
    },
    "html": {
       "minify": { "exclude": ["index.html"] }
    }
  }]
}
